body{
	background:url("../image/login_bg.png") no-repeat;
}
.form{
	margin:0 50px;
}
.logo{
	padding-top:50px;
}

.logo-img{
	width:30%;
	margin:0 auto;
}
.user{
	height:30px;
	border:1px solid #fff;
	margin-top:20px;
	padding-left:35px;
	position:relative;
}

.user>span{
	width:16px;
	height:20px;
	position:absolute;
	left:5px;
	top:7px;
	padding-right:5px;
	border-right:1px solid #fff;
}
.user>input{
	width:100%;
	border:none;
	background:transparent;
	height:30px;
	color:#fff;

}

/*input 字体颜色*/

::-webkit-input-placeholder { /* WebKit browsers */  
    color:    #fff;  
}  
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */  
   color:    #fff;  
   opacity:  1;  
}  
::-moz-placeholder { /* Mozilla Firefox 19+ */  
   color:    #fff;  
   opacity:  1;  
}  
:-ms-input-placeholder { /* Internet Explorer 10+ */  
   color:    #fff;  
}  


.login-dl{
	width:30%;
	border:1px solid #fff;
	border-radius:10%;
	margin:20px auto;
	line-height:25px;
	text-align:center;
	color:#fff;
}

.re{
	overflow:hidden;
	
}
.re>span>a{
	color:#fff;
	font-size:14px;
}
.re>span:nth-child(1){
	float:left;
}
.re>span:nth-child(2){
	float:right;
}

